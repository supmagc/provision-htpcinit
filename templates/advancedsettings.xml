<advancedsettings>
    <network>
        <curlclienttimeout>9999999</curlclienttimeout>
        <curllowspeedtime>9999999</curllowspeedtime>
    </network>
    <cache>                                 <!-- Since Kodi 17 Krypton -->
        <buffermode>1</buffermode>          <!-- Default is 0 -->
        <memorysize>139460608</memorysize>  <!-- Default is 20971520 bytes or 20 MB -->
        <readfactor>15.0</readfactor>       <!-- Default is 4.0 -->
    </cache>
    <pathsubstitution>
        <substitute>
            <from>smb://{NAS_HOSTNAME}/Movies/</from>
            <to>/mnt/movies/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_IP}/Movies/</from>
            <to>/mnt/movies/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_HOSTNAME}/Series/</from>
            <to>/mnt/series/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_IP}/Series/</from>
            <to>/mnt/series/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_HOSTNAME}/Music/</from>
            <to>/mnt/music/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_IP}/Music/</from>
            <to>/mnt/music/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_HOSTNAME}/Pictures/</from>
            <to>/mnt/pictures/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_IP}/Pictures/</from>
            <to>/mnt/pictures/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_HOSTNAME}/Phones/</from>
            <to>/mnt/phones/</to>
        </substitute>
        <substitute>
            <from>smb://{NAS_IP}/Phones/</from>
            <to>/mnt/phones/</to>
        </substitute>
    </pathsubstitution>
    <videolibrary>
        <tvshowextraart>
            <arttype>characterart</arttype>
            <arttype>clearart</arttype>
            <arttype>clearlogo</arttype>
            <arttype>landscape</arttype>
            <arttype>keyart</arttype>
            <arttype>fanart</arttype>
        </tvshowextraart>
        <tvseasonextraart>
            <arttype>landscape</arttype>
            <arttype>fanart</arttype>
        </tvseasonextraart>
        <episodeextraart>
            <arttype>fanart</arttype>
        </episodeextraart>
        <movieextraart>
            <arttype>banner</arttype>
            <arttype>clearart</arttype>
            <arttype>clearlogo</arttype>
            <arttype>discart</arttype>
            <arttype>landscape</arttype>
            <arttype>keyart</arttype>
            <arttype>fanart</arttype>
        </movieextraart>
        <moviesetextraart>
            <arttype>banner</arttype>
            <arttype>clearart</arttype>
            <arttype>clearlogo</arttype>
            <arttype>discart</arttype>
            <arttype>landscape</arttype>
            <arttype>keyart</arttype>
            <arttype>fanart</arttype>
        </moviesetextraart>
        <musicvideoextraart>
            <arttype>banner</arttype>
            <arttype>clearart</arttype>
            <arttype>clearlogo</arttype>
            <arttype>discart</arttype>
            <arttype>landscape</arttype>
            <arttype>fanart</arttype>
        </musicvideoextraart>
    </videolibrary>
</advancedsettings>