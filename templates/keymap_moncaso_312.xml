<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains the mapping of remote keys to actions within Kodi.                -->
<!--                                                                                      -->
<!-- The format is:                                                                       -->
<!--  <window>                                                                            -->
<!--    <device>                                                                          -->
<!--      <button>action</button>                                                         -->
<!--    </device>                                                                         -->
<!--  </window>                                                                           -->
<!--                                                                                      -->
<!-- The <global> section is a fall through - they will only be used if the button is     -->
<!-- not used in the current window's section.                                            -->
<!--                                                                                      -->
<!-- Actions can be built-in functions.                                                   -->
<!--  eg <B>ActivateWindow(Music)</B>                                                     -->
<!-- would automatically go to Music on the press of the B button.                        -->
<!--                                                                                      -->
<!-- An empty action removes the corresponding mapping from default and parent keymaps.   -->
<!-- This is different from a "noop" action, which disables a button.                     -->
<!--                                                                                      -->
<!-- More documentation on keymaps can be found on http://kodi.wiki/view/keymaps          -->
<keymap>
  <!-- Default actions -->
  <global>
    <remote>
      <play>PlayPause</play>
      <pause>Pause</pause>
      <stop>Stop</stop>
      <forward>FastForward</forward>
      <reverse>Rewind</reverse>
      <next>SkipNext</next>
      <previous>SkipPrevious</previous>
      <left>Left</left>
      <right>Right</right>
      <up>Up</up>
      <down>Down</down>
      <channel_up>Up</channel_up>
      <channel_down>Down</channel_down>
      <home>ActivateWindow(Home)</home>
      <select>Select</select>
      <back>Back</back>
      <menu>ContextMenu</menu>
      <record>Record</record>
      <eject>EjectTray()</eject>
      <volume_up>ChapterOrBigStepForward</volume_up>
      <volume_downus>ChapterOrBigStepBack</volume_downus>
      <mute>Mute</mute>
      <info>Info</info>
      <exit>Close</exit>
      <power>ShutDown()</power>
      <video>ActivateWindow(Videos,Movies)</video>
      <audio>ActivateWindow(Music)</audio>
      <photos>ActivateWindow(Pictures)</photos>
      <tv>PlayPvrTV</tv>
      <num_0>Number0</num_0>
      <num_1>Number1</num_1>
      <num_2>Number2</num_2>
      <num_3>Number3</num_3>
      <num_4>Number4</num_4>
      <num_5>Number5</num_5>
      <num_6>Number6</num_6>
      <num_7>Number7</num_7>
      <num_8>Number8</num_8>
      <num_9>Number9</num_9>
    </remote>
  </global>

  <Home>
    <remote>
      <guide>ActivateWindow(TVGuide)</guide>
    </remote>
  </Home>

  <!-- Media viewing -->
  <FullscreenVideo>
    <remote>
      <menu>OSD</menu>
      <guide>ShowVideoMenu</guide>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>ChapterOrBigStepForward</up>
      <down>ChapterOrBigStepBack</down>
    </remote>
  </FullscreenVideo>
  <FullscreenGame>
    <remote>
      <menu>OSD</menu>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>ChapterOrBigStepForward</up>
      <down>ChapterOrBigStepBack</down>
    </remote>
  </FullscreenGame>
  <Visualisation>
    <remote>
      <menu>OSD</menu>
      <guide>Playlist</guide>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>IncreaseRating</up>
      <down>DecreaseRating</down>
      <channel_up>IncreaseRating</channel_up>
      <channel_down>DecreaseRating</channel_down>
    </remote>
  </Visualisation>
  <VideoMenu>
    <remote>
      <menu>OSD</menu>
      <guide>Back</guide>
    </remote>
  </VideoMenu>
  <SlideShow>
    <remote>
      <menu>OSD</menu>
      <right>NextPicture</right>
      <left>PreviousPicture</left>
      <up>ZoomIn</up>
      <down>ZoomOut</down>
    </remote>
  </SlideShow>

  <!-- Information menu's -->
  <FullscreenInfo>
    <remote>
      <info>Back</info>
    </remote>
  </FullscreenInfo>
  <PlayerControls>
    <remote>
      <menu>Back</menu>
