<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains the mapping of remote keys to actions within Kodi.                -->
<!--                                                                                      -->
<!-- The format is:                                                                       -->
<!--  <window>                                                                            -->
<!--    <device>                                                                          -->
<!--      <button>action</button>                                                         -->
<!--    </device>                                                                         -->
<!--  </window>                                                                           -->
<!--                                                                                      -->
<!-- The <global> section is a fall through - they will only be used if the button is     -->
<!-- not used in the current window's section.                                            -->
<!--                                                                                      -->
<!-- Actions can be built-in functions.                                                   -->
<!--  eg <B>ActivateWindow(Music)</B>                                                     -->
<!-- would automatically go to Music on the press of the B button.                        -->
<!--                                                                                      -->
<!-- An empty action removes the corresponding mapping from default and parent keymaps.   -->
<!-- This is different from a "noop" action, which disables a button.                     -->
<!--                                                                                      -->
<!-- More documentation on keymaps can be found on http://kodi.wiki/view/keymaps          -->
<keymap>
  <!-- Default actions -->
  <global>
    <remote>
      <play>PlayPause</play>
      <pause>Pause</pause>
      <stop>Stop</stop>
      <forward>FastForward</forward>
      <reverse>Rewind</reverse>
      <skipplus>SkipNext</skipplus>
      <skipminus>SkipPrevious</skipminus>
      <left>Left</left>
      <right>Right</right>
      <up>Up</up>
      <down>Down</down>
      <channelplus>PageUp</channelplus>
      <channelminus>PageDown</channelminus>
      <display>ActivateWindow(Home)</display>
      <select>Select</select>
      <back>Back</back>
      <menu>ContextMenu</menu>
      <volumeplus>VolumeUp</volumeplus>
      <volumeminus>VolumeDown</volumeminus>
      <mute>Mute</mute>
      <info>Info</info>
      <power>ShutDown()</power>
      <red>ActivateWindow(Videos,MovieTitles,true)</red>
      <green>ActivateWindow(Videos,TvShowTitles,true)</green>
      <yellow>ActivateWindow(Music,Albums,true)</yellow>
      <blue>PlayPvrTV</blue>
      <zero>Number0</zero>
      <one>Number1</one>
      <two>JumpSMS2</two>
      <three>JumpSMS3</three>
      <four>JumpSMS4</four>
      <five>JumpSMS5</five>
      <six>JumpSMS6</six>
      <seven>JumpSMS7</seven>
      <eight>JumpSMS8</eight>
      <nine>JumpSMS9</nine>
    </remote>
    <universalremote>
        <obc254>Playlist</obc254> <!-- Playlist -->
        <obc253>Close</obc253> <!-- Close -->
        <obc252>ActivateWindow(Favourites)</obc252> <!-- Favourites -->
        <obc251>ActivateWindow(Home)</obc251> <!-- Open smart menu -->
        <obc250>ActivateWindow(Home)</obc250> <!-- Open net -->
    </universalremote>
  </global>

  <!-- Specials and exceptions -->
  <Home>
    <remote>
      <guide>ActivateWindow(TVGuide)</guide>
      <display>Fullscreen</display>
    </remote>
  </Home>
  <Videos>
    <remote>
      <channelplus>NextLetter</channelplus>
      <channelminus>PrevLetter</channelminus>
    </remote>
  </Videos>
  <Music>
    <remote>
      <channelplus>NextLetter</channelplus>
      <channelminus>PrevLetter</channelminus>
    </remote>
  </Music>
  <VirtualKeyboard>
    <remote>
      <zero>Number0</zero>
      <one>Number1</one>
      <two>Number2</two>
      <three>Number3</three>
      <four>Number4</four>
      <five>Number5</five>
      <six>Number6</six>
      <seven>Number7</seven>
      <eight>Number8</eight>
      <nine>Number9</nine>
      <back>BackSpace</back>
    </remote>
  </VirtualKeyboard>
  <NumericInput>
    <remote>
      <zero>Number0</zero>
      <one>Number1</one>
      <two>Number2</two>
      <three>Number3</three>
      <four>Number4</four>
      <five>Number5</five>
      <six>Number6</six>
      <seven>Number7</seven>
      <eight>Number8</eight>
      <nine>Number9</nine>
      <back>BackSpace</back>
    </remote>
  </NumericInput>

  <!-- Media viewing -->
  <FullscreenVideo>
    <remote>
      <menu>OSD</menu>
      <guide>ShowVideoMenu</guide>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>ChapterOrBigStepForward</up>
      <down>ChapterOrBigStepBack</down>
      <select>PlayPause</select>
    </remote>
  </FullscreenVideo>
  <FullscreenGame>
    <remote>
      <menu>OSD</menu>
    </remote>
  </FullscreenGame>
  <Visualisation>
    <remote>
      <menu>OSD</menu>
      <guide>Playlist</guide>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>SkipNext</up>
      <down>SkipPrevious</down>
      <channelplus>IncreaseRating</channelplus>
      <channelminus>DecreaseRating</channelminus>
      <select>PlayPause</select>
    </remote>
  </Visualisation>
  <VideoMenu>
    <remote>
      <menu>OSD</menu>
      <guide>ShowVideoMenu</guide>
      <select>PlayPause</select>
    </remote>
  </VideoMenu>
  <SlideShow>
    <remote>
      <menu>OSD</menu>
      <right>NextPicture</right>
      <left>PreviousPicture</left>
      <up>ZoomIn</up>
      <down>ZoomOut</down>
    </remote>
  </SlideShow>
  <FullscreenLiveTV>
    <remote>
      <guide>ActivateWindow(TVGuide)</guide>
      <zero>Number0</zero>
      <one>Number1</one>
      <two>Number2</two>
      <three>Number3</three>
      <four>Number4</four>
      <five>Number5</five>
      <six>Number6</six>
      <seven>Number7</seven>
      <eight>Number8</eight>
      <nine>Number9</nine>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>ChannelUp</up>
      <down>ChannelDown</down>
      <channelplus>ChannelUp</channelplus>
      <channelminus>ChannelDown</channelminus>
    </remote>
  </FullscreenLiveTV>
  <FullscreenRadio>
    <remote>
      <guide>ActivateWindow(TVGuide)</guide>
      <zero>Number0</zero>
      <one>Number1</one>
      <two>Number2</two>
      <three>Number3</three>
      <four>Number4</four>
      <five>Number5</five>
      <six>Number6</six>
      <seven>Number7</seven>
      <eight>Number8</eight>
      <nine>Number9</nine>
      <left>StepBack</left>
      <right>StepForward</right>
      <up>ChannelUp</up>
      <down>ChannelDown</down>
      <channelplus>ChannelUp</channelplus>
      <channelminus>ChannelDown</channelminus>
    </remote>
  </FullscreenRadio>

