  <!-- TV and PVR related -->
  <Teletext>
    <remote>
      <video>Red</video>
      <audio>Green</audio>
      <photos>Yellow</photos>
      <tv>Blue</tv>
      <menu>Back</menu>
      <text>Back</text>
